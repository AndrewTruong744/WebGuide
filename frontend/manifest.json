{
  "manifest_version": 3,
  "name": "WebGuide",
  "version": "1.0",
  "description": "Assist people to navigate the web.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/pfp.png",
      "32": "images/pfp.png"
    }
  },
  "icons": {
    "16": "images/pfp.png",
    "32": "images/pfp.png",
    "48": "images/pfp.png",
    "128": "images/pfp.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}